<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/primary_dark</item>
        <item name="colorPrimaryDark">@color/primary</item>
        <item name="android:textColorPrimary">#fff</item>
    </style>


    <!--主页tablayout-->
    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">?attr/colorAccent</item>
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabPaddingStart">12dp</item>
        <item name="tabPaddingEnd">12dp</item>
        <item name="tabBackground">@drawable/ripple_bg_white</item>
        <item name="tabTextAppearance">@style/MyCustomTabTextAppearance</item>
        <item name="tabSelectedTextColor">?android:textColorPrimary</item>
    </style>
    <style name="MyCustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?android:textColorHint</item>
        <item name="textAllCaps">false</item>
    </style>

    <!--主页fragment中的tabLayout-->
    <style name="MainFragmentTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">?attr/colorPrimaryDark</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabBackground">@drawable/ripple_bg_black</item>
        <item name="tabSelectedTextColor">@color/primary_darker</item>
        <item name="tabTextAppearance">@style/MainFragmentTextAppearance</item>
    </style>
    <style name="MainFragmentTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/su_text_gray</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
    </style>
</resources>
