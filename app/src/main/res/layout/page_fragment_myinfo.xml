<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/su_bg_gray"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="35dp">

        <RelativeLayout
            android:id="@+id/rl_extend"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@color/su_white">
            <ImageView
                android:id="@+id/iv_tab_func"
                android:layout_width="44dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:src="@mipmap/tab_add"
                android:background="@drawable/ripple_bg_black"
                android:scaleType="centerInside"/>

        </RelativeLayout>

        <android.support.design.widget.TabLayout
            android:id="@+id/tl_tab"
            style="@style/MainFragmentTabLayout"
            android:layout_width="wrap_content"
            android:layout_height="35dp" />


    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/shape_bg_line_gray" />

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_main"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_marginTop="12dp"
        android:layout_weight="1"
        android:background="#00000000" />


</LinearLayout>