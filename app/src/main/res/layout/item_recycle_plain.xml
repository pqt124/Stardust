<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:background="@color/su_white">

    <ImageView
        android:id="@+id/iv_simple"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:background="@mipmap/icon_item_image_default"/>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_simple"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="12dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:text="title"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textColor="@color/su_text_black"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_alignStart="@id/tv_title"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="14dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_toRightOf="@id/iv_simple"
            android:text="今天"
            android:textSize="10sp"
            android:textColor="@color/su_text_gray_3c"
            android:layout_alignParentBottom="true"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_item_view"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_num_view"
            android:maxLength="4"
            android:text="98"
            android:textSize="10sp"
            android:textColor="@color/su_text_gray_3c"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="5dp"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_item_collection"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_num_collection"
            android:maxLength="4"
            android:text="21"
            android:textSize="10sp"
            android:textColor="@color/su_text_gray_3c"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="@dimen/normal_margin_right"
            />



    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/su_bg_line_gary"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>